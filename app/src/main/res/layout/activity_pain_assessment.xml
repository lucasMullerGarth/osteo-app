<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_gradient_header"
            android:padding="16dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/txtTitle"
                android:text="Avaliação da Dor"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:text="Registre seu nível de dor atual"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:orientation="vertical"
            android:elevation="5dp">

            <TextView
                android:text="Escala Numérica de Dor (0-10)"
                android:textSize="16sp"
                android:textColor="#1A237E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPainLevel"
                android:text="5"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/bg_circle_gradient"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/txtPainDescription"
                android:text="Dor intensa"
                android:textSize="16sp"
                android:textColor="#444444"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekPain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="0 - Sem dor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:text="10 - Pior dor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="Toque nas áreas com dor"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--
        <ImageView
            android:id="@+id/imgBody"
            android:src="@drawable/body_front"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />
        -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Leve (1-3)"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Moderada (4-6)"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Intensa (7-10)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="#E9F0FB"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Resumo da Avaliação"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtResumoData"
                android:text="Data: --/--/----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtResumoNivel"
                android:text="Nível de dor numérico: 0/10"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtResumoPontos"
                android:text="Pontos de dor marcados: 0"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- BOTÃO SALVAR -->
        <Button
            android:id="@+id/btnSalvar"
            android:text="Salvar Avaliação"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>


    </LinearLayout>
</ScrollView>
